@model CVGS.Models.REVIEW

@{
    ViewBag.Title = "Delete Review";
}

<h2>@ViewBag.Title</h2>

    <a href="@ViewBag.referer" class="btn btn-default">
    <i class="fa fa-arrow-left"></i>Back
</a>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ReviewText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReviewText)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GAME.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GAME.Title)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MemberId)
        @Html.HiddenFor(model => model.GameId)

        <div class="form__actions no-color">
            <div class="col-md-offset-2 col-md-10 form__actions">
                <a href="@ViewBag.referer" class="btn btn-default">Cancel</a>
                <button type="submit" class="btn btn--delete"><i class="fa fa-trash"></i>Delete</button>
            </div>
        </div>
    }
</div>
