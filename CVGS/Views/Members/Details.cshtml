</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FavPlatform)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FavPlatform)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FavCategory)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FavCategory)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FavGame)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FavGame)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateJoined)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateJoined)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ActiveStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ActiveStatus)
        </dd>

    </dl>
    <h4>Friends</h4>
    <dl class="dl-horizontal">
        @foreach (var m in Model.FRIENDSHIPs1.Where(m=>m.MEMBER.ActiveStatus)
        {
            <dt>@m.FRIEND.FName @m.FRIEND.LName</dt>
            <dd>@m.FRIEND.UserName</dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
    @if ((string)Session["MemberRole"] == "Admin")
    {
        @:| @Html.ActionLink("Change Member Role", "Role", new { id = Model.MemberId })
    }
</p>
