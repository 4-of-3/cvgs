        <dl class="dl-horizontal">
            @foreach (var m in Model.FRIENDSHIPs1.Where(m => m.FRIEND.ActiveStatus))
            {
                <dt>@m.FRIEND.FName @m.FRIEND.LName</dt>
                <dd>@m.FRIEND.UserName</dd>
            }
        </dl>*@
</div>
<p>
    @if ((string)Session["MemberRole"] == "Admin")
    {
        <div class="col-md-offset-2 col-md-4 form__actions">
            <a href="@Url.Action("Role", new {id = Model.MemberId})" class="btn btn--action">
                <i class="fa fa-user"></i>Change Role
            </a>
        </div>
    }
</p>
