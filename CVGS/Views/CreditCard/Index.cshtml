@model IEnumerable<CVGS.Models.CREDITCARD>

@{
    ViewBag.Title = "Credit Cards";
}

<h2>@ViewData["Title"]</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CardNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameOnCard)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpiryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MEMBER.FName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CardNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameOnCard)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpiryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MEMBER.FName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CardId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CardId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CardId })
        </td>
    </tr>
}

</table>
