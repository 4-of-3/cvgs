@model CVGS.Models.GAME

@{
    ViewBag.Title = ViewBag.gameTitle + " - Details";
}

<h2>@ViewBag.Title</h2>

<div>
    <section>
        <h4 style="display:inline-block">@Html.DisplayFor(model => model.Title)</h4>
        <div style="float:right">
            <p style="display:inline-block">@Html.DisplayFor(model => model.Cost)</p>
            <p style="display:inline-block">@Html.ActionLink("Edit", "Edit", new { id = Model.GameId })</p>
            <p style="display:inline-block">@Html.ActionLink("Delete", "Delete", new { id = Model.GameId })</p>
        </div>
    </section>
        
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Developer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Developer)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PublicationDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
