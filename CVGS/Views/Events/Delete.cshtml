@model CVGS.Models.EVENT

@{
    ViewBag.Title = "Delete Event";
}

<h2>@ViewBag.Title</h2>

<a href="@Url.Action("Details", "Events", new { id = Model.EventId })" class="btn btn-default">
    <i class="fa fa-arrow-left"></i>Event Details
</a>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <h4>@Html.DisplayFor(model => model.EventTitle)</h4>
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EventDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ActiveStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ActiveStatus)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="col-md-offset-2 col-md-4 form__actions">
            @Html.ActionLink("Cancel", "Details", new { id = Model.EventId }, new { @class = "btn btn-default" })
            <button type="submit" class="btn btn--delete"><i class="fa fa-trash"></i>Delete</button>
        </div>
    }
</div>
